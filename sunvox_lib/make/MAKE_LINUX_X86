set -e

MAKE_OPTIONS="TARGET_OS=linux MAKE_DYNAMIC_LIB=true"

make -j16 $MAKE_OPTIONS TARGET_ARCH=x86 MAKE_WITHOUT_SIMD=true STYPE=PS_STYPE_FLOAT32 
make install $MAKE_OPTIONS TARGET_ARCH=x86
make clean

make -j16 $MAKE_OPTIONS TARGET_ARCH=x86 MAKE_WITHOUT_SIMD=true MAKE_FOR_SLOW_CPU=true STYPE=PS_STYPE_INT16
make install $MAKE_OPTIONS TARGET_ARCH=x86 APPNAME_SUFFIX=_lofi
make clean

make -j16 $MAKE_OPTIONS TARGET_ARCH=x86_64 MAKE_WITH_SSE_VER=sse3 STYPE=PS_STYPE_FLOAT32 
make install $MAKE_OPTIONS TARGET_ARCH=x86_64
make clean
